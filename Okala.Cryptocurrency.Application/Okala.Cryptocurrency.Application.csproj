	</ItemGroup>
	
  <ItemGroup>
    <Folder Include="Controllers\v2\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Okala.Cryptocurrency.Domain\Okala.Cryptocurrency.Domain.csproj" />
